# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit .env with real secrets!

# Database Connection
CONNECTIONSTRINGS__DEFAULT=Host=your_db_host;Port=5432;Username=your_user;Password=your_password;Database=your_db;SslMode=Require

# AWS S3 Configuration (REQUIRED for music storage)
AWS__AccessKey=AKIA________________
AWS__SecretKey=________________________________________
AWS__Region=us-east-2
AWS__S3Bucket=your_bucket_name
AWS__S3Endpoint=your-access-point.s3-accesspoint.region.amazonaws.com

# OpenAI API Key (OPTIONAL - only needed for Tosin TTS)
OPENAI_API_KEY=sk-proj-___________________________________________

# JWT Settings (REQUIRED for authentication)
Jwt__Key=CHANGE_ME_minimum_32_characters_random_string
Jwt__Issuer=musicai.local
Jwt__Audience=musicai.clients

# CORS Settings
Cors__AllowedOrigins=http://localhost:3000,https://yourdomain.com

# Admin API Key (for bulk operations)
ADMIN_API_KEY=CHANGE_ME_random_hex_string

# Redis (if using caching)
REDIS_CONNECTION=localhost:6379,password=your_redis_password


